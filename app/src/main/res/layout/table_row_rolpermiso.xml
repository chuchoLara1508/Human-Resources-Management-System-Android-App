<?xml version="1.0" encoding="utf-8"?>


<TableRow
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>
    <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingTop="25sp"
            android:id="@+id/numero_rp"
            android:layout_weight="0.2"/>
    <TextView
            android:text=""
            android:layout_width="0dp"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingTop="25sp"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_rol"
            android:layout_weight="1"
    />
    <TextView
            android:text=""
            android:layout_width="0dp"
            android:textSize="10sp"
            android:paddingTop="25sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_modulo"
            android:layout_weight="1"
    />
    <TextView
            android:text=""
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="25sp"
            android:gravity="center"
            android:id="@+id/guardar"
            android:layout_weight="0.2"
    />
    <TextView
            android:text=""
            android:textSize="10sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="25sp"
            android:id="@+id/actualizar"
            android:layout_weight="0.2"
    />
    <TextView
            android:text=""
            android:textSize="10sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="25sp"
            android:id="@+id/eliminar"
            android:layout_weight="0.2"
    />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/colEditar" tools:ignore="SpeakableTextPresentCheck"/>
</TableRow>
