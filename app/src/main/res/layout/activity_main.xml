<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_fondo_app"
        tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:background="#000000"
            tools:ignore="MissingConstraints"
            app:title="Inicio de sesión"
            app:subtitle="Por favor ingrese su usuario y contraseña"
            app:titleTextColor="#ffffff"
            app:titleMarginStart="50sp"
            app:logo="@drawable/ic_baseline_account_box_24"
            app:subtitleTextColor="#fff"
            android:id="@+id/barra"
            />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="350sp"
            android:background="#13232F"
            android:layout_height="wrap_content"
            android:padding="20sp"
            app:layout_constraintTop_toBottomOf="@+id/barra"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    >

        <EditText
                android:inputType="text"
                android:layout_marginTop="40sp"
                android:textSize="25sp"
                android:hint="Nombre de usuario"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:id="@+id/usuario"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"/>

        <EditText
                android:inputType="textPassword"
                android:layout_marginTop="40sp"
                android:layout_width="250sp"
                android:textSize="25sp"
                android:hint="Contraseña"
                android:layout_height="wrap_content"
                android:id="@+id/contra"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                app:layout_constraintTop_toBottomOf="@+id/usuario"
                tools:ignore="MissingConstraints"/>
        <TextView
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content"
                android:layout_width="250sp"
                android:text=""
                android:textColor="#189b78"
                android:textStyle=""
                android:textSize="25sp"
                android:id="@+id/olvide"
                app:layout_constraintTop_toTopOf="@+id/contra"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/inicio"
        />
        <Button
                android:layout_marginTop="70sp"
                android:layout_width="250sp"
                android:layout_height="70sp"
                android:text="Ingresar"
                android:id="@+id/inicio"
                app:layout_constraintTop_toTopOf="@+id/olvide"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>